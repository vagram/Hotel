<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

        <changeSet id="1.0.0" author="VD">
            <createTable tableName="users">
                <column name="id" type="integer" autoIncrement="true">
                    <constraints primaryKey="true" nullable="false"/>
                </column>
                <column name="password" type="varchar(200)">
                </column>
                <column name="username" type="varchar(35)">
                </column>
                <column name="firstname" type="varchar(100)"/>
                <column name="second_name" type="varchar(100)"/>
                <column name="email" type="varchar(100)"/>
                <column name="account_balance" type="bigint"/>
                <column name="reservation" type="boolean"/>
            </createTable>
    </changeSet>

    <changeSet id="1.0.1" author="VD">
        <createTable tableName="room">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)">
            </column>
            <column name="enable" type="boolean">
            </column>
            <column name="price" type="bigint"/>
            <column name="reservation_on" type="varchar(100)"/>
            <column name="reservation_off" type="varchar(100)"/>
        </createTable>
    </changeSet>


