<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

        <changeSet id="1.0.0" author="VD">
            <createTable tableName="users">
                <column name="id" type="integer" autoIncrement="true">
                    <constraints primaryKey="true" nullable="false"/>
                </column>
                <column name="password" type="varchar(200)">
                </column>
                <column name="username" type="varchar(35)">
                </column>
                <column name="firstname" type="varchar(100)"/>
                <column name="second_name" type="varchar(100)"/>
                <column name="email" type="varchar(100)"/>
                <column name="account_balance" type="bigint"/>
            </createTable>
    </changeSet>

    <changeSet id="1.0.1" author="VD">
        <createTable tableName="room">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)">
            </column>
            <column name="enable" type="boolean">
            </column>
            <column name="price" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="1.0.2" author="VD">
        <createTable tableName="booking">
            <column name="room_id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="integer">
            </column>
            <column name="check_in" type="DATETIME">
            </column>
            <column name="check_out" type="DATETIME"/>
        </createTable>
    </changeSet>

    <changeSet id="1.0.3" author="VD">
        <addColumn tableName="booking">
            <column name="id" type="integer" value="1"/>
        </addColumn>
    </changeSet>

    <changeSet id="1.0.4" author="VD">
        <addColumn tableName="booking">
            <column name="active_booking" type="boolean"/>
        </addColumn>
        <addColumn tableName="booking">
            <column name="soft_delete_book" type="DATE"/>
        </addColumn>
    </changeSet>

    <changeSet id="1.0.5" author="VD">
        <insert tableName="booking">
            <column name="id" value="1"/>
            <column name="user_id" value="1"/>
<!--            <column name="check_in" type="date '08/20/2020 10:10:10 AM"/>-->
<!--            <column name="check_out" valueDate="30.08.2020"/>-->
            <column name="active_booking" valueBoolean="null"/>
            <column name="soft_delete_book" valueDate="null"/>
        </insert>
    </changeSet>

</databaseChangeLog>